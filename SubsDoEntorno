  System.out.println();
    }
   }
 }

  Scanner teclado = new Scanner(System.in);
  System.out.println();
  System.out.println("Informe uma linha (de 0 a 29)");
  lin  = teclado.nextInt();
  System.out.println();
  System.out.println("Informe uma coluna (de 0 a 39)");
  col  = teclado.nextInt();
  
  //Miolo

  if(lin>0 && col>0){
    if(lin<29 && col<39){
  Matriz[lin-1][col-1]=-1;
  Matriz[lin+1][col+1]=-1;
  Matriz[lin][col-1]=-1;
  Matriz[lin][col+1]=-1;
  Matriz[lin-1][col]=-1;
  Matriz[lin+1][col]=-1;
  Matriz[lin-1][col+1]=-1;
  Matriz[lin+1][col-1]=-1;
    }
  }

 //Quinas

  if (lin==0 && col==0){
   Matriz[lin+1][col+1]=-1;
   Matriz[lin][col+1]=-1;
   Matriz[lin+1][col]=-1;
  }
  if (lin==0 && col==39){
   Matriz[lin][col-1]=-1;
   Matriz[lin+1][col-1]=-1;
   Matriz[lin+1][col]=-1;
  }
  if (lin==29 && col==0){
   Matriz[lin-1][col+1]=-1;
   Matriz[lin][col+1]=-1;
   Matriz[lin-1][col]=-1;
  }
  if (lin==29 && col==39){
   Matriz[lin-1][col-1]=-1;
   Matriz[lin][col-1]=-1;
   Matriz[lin-1][col]=-1;
  }

  //Margens

  if (lin==0 && col>0 && col<39){
   Matriz[lin+1][col+1]=-1;
   Matriz[lin][col-1]=-1;
   Matriz[lin][col+1]=-1;
   Matriz[lin+1][col]=-1;
   Matriz[lin+1][col-1]=-1;
  }
  
