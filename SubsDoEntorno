  Matriz[lin-1][col-1]=-1;
  Matriz[lin-1][col]=-1;
  Matriz[lin][col-1]=-1;
  Matriz[lin+1][col]=-1;
  Matriz[lin+1][col-1]=-1;
  }

  System.out.println();
  System.out.println("Matriz após a substituição por -1:");
  System.out.println();


  for(l=0;l<=29;l++){
    for(c=0;c<=39;c++){
    System.out.print(Matriz[l][c] + " ");
    if(c==39) {
    System.out.println();
    }
    }
    }
    
  
}


